{
  "schemaVersion": 38,
  "title": "Lynx MongoDB NoSQL Dashboard",
  "editable": true,
  "timezone": "browser",
  "version": 1,
  "tags": [
    "lynx",
    "mongodb",
    "nosql",
    "database",
    "monitoring"
  ],
  "style": "dark",
  "graphTooltip": 1,
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": [
      "5s",
      "10s",
      "30s",
      "1m",
      "5m",
      "15m",
      "30m",
      "1h",
      "2h",
      "1d"
    ]
  },
  "templating": {
    "list": [
      {
        "name": "DS_PROM",
        "type": "datasource",
        "query": "prometheus",
        "current": {
          "text": "Prometheus",
          "value": "Prometheus"
        },
        "hide": 2
      },
      {
        "name": "rate_interval",
        "type": "custom",
        "query": "1m,5m,15m",
        "current": {
          "text": "5m",
          "value": "5m"
        },
        "hide": 0
      },
      {
        "name": "job",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "$DS_PROM"
        },
        "query": "label_values(up, job)",
        "refresh": 2,
        "multi": true,
        "includeAll": true,
        "hide": 0
      },
      {
        "name": "instance",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "$DS_PROM"
        },
        "query": "label_values(up{job=~\"$job\"}, instance)",
        "refresh": 2,
        "multi": true,
        "includeAll": true,
        "hide": 0
      },
      {
        "name": "database",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "$DS_PROM"
        },
        "query": "label_values(lynx_mongodb_operations_total, database)",
        "refresh": 2,
        "multi": true,
        "includeAll": true,
        "hide": 0
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Operations/sec",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 6,
        "h": 4
      },
      "datasource": {
        "type": "prometheus",
        "uid": "$DS_PROM"
      },
      "targets": [
        {
          "expr": "sum(rate(lynx_mongodb_operations_total{job=~\"$job\",instance=~\"$instance\"}[$rate_interval]))",
          "legendFormat": "Operations/sec"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "displayMode": "gradient-gauge",
            "gradientMode": "hue",
            "orientation": "auto",
            "reduceOptions": {
              "calcs": [
                "lastNotNull"
              ],
              "fields": "",
              "values": false
            },
            "textMode": "auto"
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 1000
              },
              {
                "color": "red",
                "value": 5000
              }
            ]
          },
          "unit": "reqps"
        }
      }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Active Connections",
      "gridPos": {
        "x": 6,
        "y": 0,
        "w": 6,
        "h": 4
      },
      "datasource": {
        "type": "prometheus",
        "uid": "$DS_PROM"
      },
      "targets": [
        {
          "expr": "sum(lynx_mongodb_active_connections{job=~\"$job\",instance=~\"$instance\"})",
          "legendFormat": "Active Connections"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "custom": {
            "displayMode": "gradient-gauge",
            "gradientMode": "hue",
            "orientation": "auto",
            "reduceOptions": {
              "calcs": [
                "lastNotNull"
              ],
              "fields": "",
              "values": false
            },
            "textMode": "auto"
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 50
              },
              {
                "color": "red",
                "value": 100
              }
            ]
          },
          "unit": "short"
        }
      }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Operations by Type",
      "gridPos": {
        "x": 12,
        "y": 0,
        "w": 12,
        "h": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "$DS_PROM"
      },
      "targets": [
        {
          "expr": "sum(rate(lynx_mongodb_operations_total{operation=\"find\",job=~\"$job\",instance=~\"$instance\",database=~\"$database\"}[$rate_interval])) by (database)",
          "legendFormat": "Find - {{database}}"
        },
        {
          "expr": "sum(rate(lynx_mongodb_operations_total{operation=\"insert\",job=~\"$job\",instance=~\"$instance\",database=~\"$database\"}[$rate_interval])) by (database)",
          "legendFormat": "Insert - {{database}}"
        },
        {
          "expr": "sum(rate(lynx_mongodb_operations_total{operation=\"update\",job=~\"$job\",instance=~\"$instance\",database=~\"$database\"}[$rate_interval])) by (database)",
          "legendFormat": "Update - {{database}}"
        },
        {
          "expr": "sum(rate(lynx_mongodb_operations_total{operation=\"delete\",job=~\"$job\",instance=~\"$instance\",database=~\"$database\"}[$rate_interval])) by (database)",
          "legendFormat": "Delete - {{database}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "axisLabel": "",
            "axisPlacement": "auto",
            "barAlignment": 0,
            "drawStyle": "line",
            "fillOpacity": 10,
            "gradientMode": "none",
            "hideFrom": {
              "legend": false,
              "tooltip": false,
              "vis": false
            },
            "lineInterpolation": "linear",
            "lineWidth": 1,
            "pointSize": 5,
            "scaleDistribution": {
              "type": "linear"
            },
            "showPoints": "never",
            "spanNulls": false,
            "stacking": {
              "group": "A",
              "mode": "none"
            },
            "thresholdsStyle": {
              "mode": "off"
            }
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "red",
                "value": 80
              }
            ]
          },
          "unit": "reqps"
        }
      }
    },
    {
      "id": 4,
      "type": "stat",
      "title": "Average Query Duration",
      "gridPos": {
        "x": 0,
        "y": 4,
        "w": 6,
        "h": 4
      },
      "datasource": {
        "type": "prometheus",
        "uid": "$DS_PROM"
      },
      "targets": [
        {
          "expr": "avg(lynx_mongodb_query_duration_seconds{job=~\"$job\",instance=~\"$instance\"})",
          "legendFormat": "Avg Duration"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "custom": {
            "displayMode": "gradient-gauge",
            "gradientMode": "hue",
            "orientation": "auto",
            "reduceOptions": {
              "calcs": [
                "lastNotNull"
              ],
              "fields": "",
              "values": false
            },
            "textMode": "auto"
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 0.1
              },
              {
                "color": "red",
                "value": 1
              }
            ]
          },
          "unit": "s"
        }
      }
    },
    {
      "id": 5,
      "type": "stat",
      "title": "Connection Pool Usage",
      "gridPos": {
        "x": 6,
        "y": 4,
        "w": 6,
        "h": 4
      },
      "datasource": {
        "type": "prometheus",
        "uid": "$DS_PROM"
      },
      "targets": [
        {
          "expr": "sum(lynx_mongodb_connection_pool_active{job=~\"$job\",instance=~\"$instance\"}) / sum(lynx_mongodb_connection_pool_max{job=~\"$job\",instance=~\"$instance\"}) * 100",
          "legendFormat": "Pool Usage %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "custom": {
            "displayMode": "gradient-gauge",
            "gradientMode": "hue",
            "orientation": "auto",
            "reduceOptions": {
              "calcs": [
                "lastNotNull"
              ],
              "fields": "",
              "values": false
            },
            "textMode": "auto"
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 70
              },
              {
                "color": "red",
                "value": 90
              }
            ]
          },
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      }
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Query Performance",
      "gridPos": {
        "x": 0,
        "y": 8,
        "w": 12,
        "h": 6
      },
      "datasource": {
        "type": "prometheus",
        "uid": "$DS_PROM"
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(lynx_mongodb_query_duration_seconds_bucket{job=~\"$job\",instance=~\"$instance\"}[$rate_interval])) by (le))",
          "legendFormat": "50th percentile"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(lynx_mongodb_query_duration_seconds_bucket{job=~\"$job\",instance=~\"$instance\"}[$rate_interval])) by (le))",
          "legendFormat": "95th percentile"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(lynx_mongodb_query_duration_seconds_bucket{job=~\"$job\",instance=~\"$instance\"}[$rate_interval])) by (le))",
          "legendFormat": "99th percentile"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "axisLabel": "",
            "axisPlacement": "auto",
            "barAlignment": 0,
            "drawStyle": "line",
            "fillOpacity": 10,
            "gradientMode": "none",
            "hideFrom": {
              "legend": false,
              "tooltip": false,
              "vis": false
            },
            "lineInterpolation": "linear",
            "lineWidth": 1,
            "pointSize": 5,
            "scaleDistribution": {
              "type": "linear"
            },
            "showPoints": "never",
            "spanNulls": false,
            "stacking": {
              "group": "A",
              "mode": "none"
            },
            "thresholdsStyle": {
              "mode": "off"
            }
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "red",
                "value": 80
              }
            ]
          },
          "unit": "s"
        }
      }
    },
    {
      "id": 7,
      "type": "stat",
      "title": "Error Rate",
      "gridPos": {
        "x": 12,
        "y": 8,
        "w": 6,
        "h": 3
      },
      "datasource": {
        "type": "prometheus",
        "uid": "$DS_PROM"
      },
      "targets": [
        {
          "expr": "sum(rate(lynx_mongodb_errors_total{job=~\"$job\",instance=~\"$instance\"}[$rate_interval])) / sum(rate(lynx_mongodb_operations_total{job=~\"$job\",instance=~\"$instance\"}[$rate_interval])) * 100",
          "legendFormat": "Error Rate %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "custom": {
            "displayMode": "gradient-gauge",
            "gradientMode": "hue",
            "orientation": "auto",
            "reduceOptions": {
              "calcs": [
                "lastNotNull"
              ],
              "fields": "",
              "values": false
            },
            "textMode": "auto"
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 1
              },
              {
                "color": "red",
                "value": 5
              }
            ]
          },
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      }
    },
    {
      "id": 8,
      "type": "stat",
      "title": "Documents Processed/sec",
      "gridPos": {
        "x": 18,
        "y": 8,
        "w": 6,
        "h": 3
      },
      "datasource": {
        "type": "prometheus",
        "uid": "$DS_PROM"
      },
      "targets": [
        {
          "expr": "sum(rate(lynx_mongodb_documents_processed_total{job=~\"$job\",instance=~\"$instance\"}[$rate_interval]))",
          "legendFormat": "Documents/sec"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "displayMode": "gradient-gauge",
            "gradientMode": "hue",
            "orientation": "auto",
            "reduceOptions": {
              "calcs": [
                "lastNotNull"
              ],
              "fields": "",
              "values": false
            },
            "textMode": "auto"
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 1000
              },
              {
                "color": "red",
                "value": 10000
              }
            ]
          },
          "unit": "reqps"
        }
      }
    }
  ]
}