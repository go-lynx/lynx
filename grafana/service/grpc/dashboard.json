{
  "schemaVersion": 38,
  "title": "Lynx gRPC Service Dashboard",
  "editable": true,
  "timezone": "browser",
  "version": 1,
  "tags": [
    "lynx",
    "grpc",
    "service",
    "rpc",
    "monitoring"
  ],
  "style": "dark",
  "graphTooltip": 1,
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": [
      "5s",
      "10s",
      "30s",
      "1m",
      "5m",
      "15m",
      "30m",
      "1h",
      "2h",
      "1d"
    ]
  },
  "templating": {
    "list": [
      {
        "name": "DS_PROM",
        "type": "datasource",
        "query": "prometheus",
        "current": {
          "text": "Prometheus",
          "value": "Prometheus"
        },
        "hide": 2
      },
      {
        "name": "rate_interval",
        "type": "custom",
        "query": "1m,5m,15m",
        "current": {
          "text": "5m",
          "value": "5m"
        },
        "hide": 0
      },
      {
        "name": "job",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "$DS_PROM"
        },
        "query": "label_values(up, job)",
        "refresh": 2,
        "multi": true,
        "includeAll": true,
        "hide": 0
      },
      {
        "name": "instance",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "$DS_PROM"
        },
        "query": "label_values(up{job=~\"$job\"}, instance)",
        "refresh": 2,
        "multi": true,
        "includeAll": true,
        "hide": 0
      },
      {
        "name": "method",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "$DS_PROM"
        },
        "query": "label_values(lynx_grpc_requests_total, method)",
        "refresh": 2,
        "multi": true,
        "includeAll": true,
        "hide": 0
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Requests/sec",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 6,
        "h": 4
      },
      "datasource": {
        "type": "prometheus",
        "uid": "$DS_PROM"
      },
      "targets": [
        {
          "expr": "sum(rate(lynx_grpc_requests_total{job=~\"$job\",instance=~\"$instance\"}[$rate_interval]))",
          "legendFormat": "Requests/sec"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "displayMode": "gradient-gauge",
            "gradientMode": "hue",
            "orientation": "auto",
            "reduceOptions": {
              "calcs": [
                "lastNotNull"
              ],
              "fields": "",
              "values": false
            },
            "textMode": "auto"
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 100
              },
              {
                "color": "red",
                "value": 1000
              }
            ]
          },
          "unit": "reqps"
        }
      }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Success Rate",
      "gridPos": {
        "x": 6,
        "y": 0,
        "w": 6,
        "h": 4
      },
      "datasource": {
        "type": "prometheus",
        "uid": "$DS_PROM"
      },
      "targets": [
        {
          "expr": "sum(rate(lynx_grpc_requests_total{status=\"OK\",job=~\"$job\",instance=~\"$instance\"}[$rate_interval])) / sum(rate(lynx_grpc_requests_total{job=~\"$job\",instance=~\"$instance\"}[$rate_interval])) * 100",
          "legendFormat": "Success Rate %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "custom": {
            "displayMode": "gradient-gauge",
            "gradientMode": "hue",
            "orientation": "auto",
            "reduceOptions": {
              "calcs": [
                "lastNotNull"
              ],
              "fields": "",
              "values": false
            },
            "textMode": "auto"
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "yellow",
                "value": 95
              },
              {
                "color": "green",
                "value": 99
              }
            ]
          },
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Request Rate by Method",
      "gridPos": {
        "x": 12,
        "y": 0,
        "w": 12,
        "h": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "$DS_PROM"
      },
      "targets": [
        {
          "expr": "sum(rate(lynx_grpc_requests_total{job=~\"$job\",instance=~\"$instance\",method=~\"$method\"}[$rate_interval])) by (method)",
          "legendFormat": "{{method}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "axisLabel": "",
            "axisPlacement": "auto",
            "barAlignment": 0,
            "drawStyle": "line",
            "fillOpacity": 10,
            "gradientMode": "none",
            "hideFrom": {
              "legend": false,
              "tooltip": false,
              "vis": false
            },
            "lineInterpolation": "linear",
            "lineWidth": 1,
            "pointSize": 5,
            "scaleDistribution": {
              "type": "linear"
            },
            "showPoints": "never",
            "spanNulls": false,
            "stacking": {
              "group": "A",
              "mode": "none"
            },
            "thresholdsStyle": {
              "mode": "off"
            }
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "red",
                "value": 80
              }
            ]
          },
          "unit": "reqps"
        }
      }
    },
    {
      "id": 4,
      "type": "stat",
      "title": "Average Response Time",
      "gridPos": {
        "x": 0,
        "y": 4,
        "w": 6,
        "h": 4
      },
      "datasource": {
        "type": "prometheus",
        "uid": "$DS_PROM"
      },
      "targets": [
        {
          "expr": "avg(lynx_grpc_request_duration_seconds{job=~\"$job\",instance=~\"$instance\"})",
          "legendFormat": "Avg Response Time"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "custom": {
            "displayMode": "gradient-gauge",
            "gradientMode": "hue",
            "orientation": "auto",
            "reduceOptions": {
              "calcs": [
                "lastNotNull"
              ],
              "fields": "",
              "values": false
            },
            "textMode": "auto"
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 0.1
              },
              {
                "color": "red",
                "value": 1
              }
            ]
          },
          "unit": "s"
        }
      }
    },
    {
      "id": 5,
      "type": "stat",
      "title": "Active Connections",
      "gridPos": {
        "x": 6,
        "y": 4,
        "w": 6,
        "h": 4
      },
      "datasource": {
        "type": "prometheus",
        "uid": "$DS_PROM"
      },
      "targets": [
        {
          "expr": "sum(lynx_grpc_active_connections{job=~\"$job\",instance=~\"$instance\"})",
          "legendFormat": "Active Connections"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "custom": {
            "displayMode": "gradient-gauge",
            "gradientMode": "hue",
            "orientation": "auto",
            "reduceOptions": {
              "calcs": [
                "lastNotNull"
              ],
              "fields": "",
              "values": false
            },
            "textMode": "auto"
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 100
              },
              {
                "color": "red",
                "value": 500
              }
            ]
          },
          "unit": "short"
        }
      }
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Response Time Percentiles",
      "gridPos": {
        "x": 0,
        "y": 8,
        "w": 12,
        "h": 6
      },
      "datasource": {
        "type": "prometheus",
        "uid": "$DS_PROM"
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(lynx_grpc_request_duration_seconds_bucket{job=~\"$job\",instance=~\"$instance\"}[$rate_interval])) by (le))",
          "legendFormat": "50th percentile"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(lynx_grpc_request_duration_seconds_bucket{job=~\"$job\",instance=~\"$instance\"}[$rate_interval])) by (le))",
          "legendFormat": "95th percentile"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(lynx_grpc_request_duration_seconds_bucket{job=~\"$job\",instance=~\"$instance\"}[$rate_interval])) by (le))",
          "legendFormat": "99th percentile"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "axisLabel": "",
            "axisPlacement": "auto",
            "barAlignment": 0,
            "drawStyle": "line",
            "fillOpacity": 10,
            "gradientMode": "none",
            "hideFrom": {
              "legend": false,
              "tooltip": false,
              "vis": false
            },
            "lineInterpolation": "linear",
            "lineWidth": 1,
            "pointSize": 5,
            "scaleDistribution": {
              "type": "linear"
            },
            "showPoints": "never",
            "spanNulls": false,
            "stacking": {
              "group": "A",
              "mode": "none"
            },
            "thresholdsStyle": {
              "mode": "off"
            }
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "red",
                "value": 80
              }
            ]
          },
          "unit": "s"
        }
      }
    },
    {
      "id": 7,
      "type": "stat",
      "title": "Circuit Breaker Status",
      "gridPos": {
        "x": 12,
        "y": 8,
        "w": 6,
        "h": 3
      },
      "datasource": {
        "type": "prometheus",
        "uid": "$DS_PROM"
      },
      "targets": [
        {
          "expr": "sum(lynx_grpc_circuit_breaker_open{job=~\"$job\",instance=~\"$instance\"})",
          "legendFormat": "Open Circuit Breakers"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "custom": {
            "displayMode": "gradient-gauge",
            "gradientMode": "hue",
            "orientation": "auto",
            "reduceOptions": {
              "calcs": [
                "lastNotNull"
              ],
              "fields": "",
              "values": false
            },
            "textMode": "auto"
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 1
              },
              {
                "color": "red",
                "value": 5
              }
            ]
          },
          "unit": "short"
        }
      }
    },
    {
      "id": 8,
      "type": "stat",
      "title": "Connection Pool Usage",
      "gridPos": {
        "x": 18,
        "y": 8,
        "w": 6,
        "h": 3
      },
      "datasource": {
        "type": "prometheus",
        "uid": "$DS_PROM"
      },
      "targets": [
        {
          "expr": "sum(lynx_grpc_connection_pool_active{job=~\"$job\",instance=~\"$instance\"}) / sum(lynx_grpc_connection_pool_max{job=~\"$job\",instance=~\"$instance\"}) * 100",
          "legendFormat": "Pool Usage %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "custom": {
            "displayMode": "gradient-gauge",
            "gradientMode": "hue",
            "orientation": "auto",
            "reduceOptions": {
              "calcs": [
                "lastNotNull"
              ],
              "fields": "",
              "values": false
            },
            "textMode": "auto"
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 70
              },
              {
                "color": "red",
                "value": 90
              }
            ]
          },
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      }
    }
  ]
}