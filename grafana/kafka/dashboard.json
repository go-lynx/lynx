        "textMode": "auto"
      }
    },
    {
      "id": 3,
      "type": "stat",
      "title": "Producer Errors",
      "gridPos": {"x": 12, "y": 0, "w": 6, "h": 4},
      "datasource": {"type": "prometheus", "uid": "$DS_PROM"},
      "targets": [
        {
          "expr": "sum(rate(lynx_kafka_producer_errors_total{job=~\"$job\",instance=~\"$instance\"}[$rate_interval]))",
