    {
      "id": 4,
      "type": "stat",
      "title": "Producer Latency",
      "gridPos": {"x": 18, "y": 0, "w": 6, "h": 4},
      "datasource": {"type": "prometheus", "uid": "$DS_PROM"},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le) (rate(lynx_kafka_producer_latency_seconds_bucket{job=~\"$job\",instance=~\"$instance\"}[$rate_interval])))",
          "legendFormat": "P95 Latency"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
