{
  "schemaVersion": 38,
  "title": "Lynx Seata Distributed Transaction Dashboard",
  "editable": true,
  "timezone": "browser",
  "version": 1,
  "tags": [
    "lynx",
    "seata",
    "distributed-transaction",
    "dtx",
    "monitoring"
  ],
  "style": "dark",
  "graphTooltip": 1,
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": [
      "5s",
      "10s",
      "30s",
      "1m",
      "5m",
      "15m",
      "30m",
      "1h",
      "2h",
      "1d"
    ]
  },
  "templating": {
    "list": [
      {
        "name": "DS_PROM",
        "type": "datasource",
        "query": "prometheus",
        "current": {
          "text": "Prometheus",
          "value": "Prometheus"
        },
        "hide": 2
      },
      {
        "name": "rate_interval",
        "type": "custom",
        "query": "1m,5m,15m",
        "current": {
          "text": "5m",
          "value": "5m"
        },
        "hide": 0
      },
      {
        "name": "job",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "$DS_PROM"
        },
        "query": "label_values(up, job)",
        "refresh": 2,
        "multi": true,
        "includeAll": true,
        "hide": 0
      },
      {
        "name": "instance",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "$DS_PROM"
        },
        "query": "label_values(up{job=~\"$job\"}, instance)",
        "refresh": 2,
        "multi": true,
        "includeAll": true,
        "hide": 0
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Global Transactions",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 6,
        "h": 4
      },
      "datasource": {
        "type": "prometheus",
        "uid": "$DS_PROM"
      },
      "targets": [
        {
          "expr": "sum(lynx_seata_global_transactions{job=~\"$job\",instance=~\"$instance\"})",
          "legendFormat": "Global Transactions"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "displayMode": "gradient-gauge",
            "gradientMode": "hue",
            "orientation": "auto",
            "reduceOptions": {
              "calcs": [
                "lastNotNull"
              ],
              "fields": "",
              "values": false
            },
            "textMode": "auto"
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 100
              },
              {
                "color": "red",
                "value": 500
              }
            ]
          },
          "unit": "short"
        }
      }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Transaction Commit Rate",
      "gridPos": {
        "x": 6,
        "y": 0,
        "w": 6,
        "h": 4
      },
      "datasource": {
        "type": "prometheus",
        "uid": "$DS_PROM"
      },
      "targets": [
        {
          "expr": "sum(rate(lynx_seata_transactions_total{status=\"committed\",job=~\"$job\",instance=~\"$instance\"}[$rate_interval])) / sum(rate(lynx_seata_transactions_total{job=~\"$job\",instance=~\"$instance\"}[$rate_interval])) * 100",
          "legendFormat": "Commit Rate %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "custom": {
            "displayMode": "gradient-gauge",
            "gradientMode": "hue",
            "orientation": "auto",
            "reduceOptions": {
              "calcs": [
                "lastNotNull"
              ],
              "fields": "",
              "values": false
            },
            "textMode": "auto"
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "yellow",
                "value": 95
              },
              {
                "color": "green",
                "value": 99
              }
            ]
          },
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Transaction Status Over Time",
      "gridPos": {
        "x": 12,
        "y": 0,
        "w": 12,
        "h": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "$DS_PROM"
      },
      "targets": [
        {
          "expr": "sum(rate(lynx_seata_transactions_total{status=\"committed\",job=~\"$job\",instance=~\"$instance\"}[$rate_interval]))",
          "legendFormat": "Committed"
        },
        {
          "expr": "sum(rate(lynx_seata_transactions_total{status=\"rollbacked\",job=~\"$job\",instance=~\"$instance\"}[$rate_interval]))",
          "legendFormat": "Rollbacked"
        },
        {
          "expr": "sum(rate(lynx_seata_transactions_total{status=\"timeout\",job=~\"$job\",instance=~\"$instance\"}[$rate_interval]))",
          "legendFormat": "Timeout"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "axisLabel": "",
            "axisPlacement": "auto",
            "barAlignment": 0,
            "drawStyle": "line",
            "fillOpacity": 10,
            "gradientMode": "none",
            "hideFrom": {
              "legend": false,
              "tooltip": false,
              "vis": false
            },
            "lineInterpolation": "linear",
            "lineWidth": 1,
            "pointSize": 5,
            "scaleDistribution": {
              "type": "linear"
            },
            "showPoints": "never",
            "spanNulls": false,
            "stacking": {
              "group": "A",
              "mode": "none"
            },
            "thresholdsStyle": {
              "mode": "off"
            }
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "red",
                "value": 80
              }
            ]
          },
          "unit": "reqps"
        }
      }
    },
    {
      "id": 4,
      "type": "stat",
      "title": "Branch Transactions",
      "gridPos": {
        "x": 0,
        "y": 4,
        "w": 6,
        "h": 4
      },
      "datasource": {
        "type": "prometheus",
        "uid": "$DS_PROM"
      },
      "targets": [
        {
          "expr": "sum(lynx_seata_branch_transactions{job=~\"$job\",instance=~\"$instance\"})",
          "legendFormat": "Branch Transactions"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "displayMode": "gradient-gauge",
            "gradientMode": "hue",
            "orientation": "auto",
            "reduceOptions": {
              "calcs": [
                "lastNotNull"
              ],
              "fields": "",
              "values": false
            },
            "textMode": "auto"
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 500
              },
              {
                "color": "red",
                "value": 2000
              }
            ]
          },
          "unit": "short"
        }
      }
    },
    {
      "id": 5,
      "type": "stat",
      "title": "Resource Manager Connections",
      "gridPos": {
        "x": 6,
        "y": 4,
        "w": 6,
        "h": 4
      },
      "datasource": {
        "type": "prometheus",
        "uid": "$DS_PROM"
      },
      "targets": [
        {
          "expr": "sum(lynx_seata_rm_connections{job=~\"$job\",instance=~\"$instance\"})",
          "legendFormat": "RM Connections"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "custom": {
            "displayMode": "gradient-gauge",
            "gradientMode": "hue",
            "orientation": "auto",
            "reduceOptions": {
              "calcs": [
                "lastNotNull"
              ],
              "fields": "",
              "values": false
            },
            "textMode": "auto"
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 50
              },
              {
                "color": "red",
                "value": 100
              }
            ]
          },
          "unit": "short"
        }
      }
    }
  ]
}